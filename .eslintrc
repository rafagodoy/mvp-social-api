{
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 9
    },
    "plugins": [
        "prettier"
    ],
    "env": {
        "node": true,
        "jest": true
    },
    "rules": {
        "prettier/prettier": ["error", {"endOfLine":"auto"}],
        "treatUndefinedAsUnspecified": true,
        "indent": [
            "error",
            4,
            { "SwitchCase": 1 }
        ],
        "class-methods-use-this": "off",
        "no-param-reassign": "off",
        "camelcase": "off",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "next"
            }
        ],
        "radix": "off"        
    }
}